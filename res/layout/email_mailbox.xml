<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_titlebar"
        android:background="@color/blue" >

        <Button
            style="@style/titlebar_btn"
            android:layout_marginLeft="@dimen/margin_m"
            android:background="@drawable/ic_arrow_back_white_36dp"
            android:onClick="back" />

        <TextView
            style="@style/titlebar_title"
            android:text="@string/mail_box" />

        <Button
            style="@style/titlebar_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_m"
            android:background="@drawable/ic_search_white_48dp"
            android:onClick="search" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>