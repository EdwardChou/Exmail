<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cuhk.cse.exmail"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <!-- 访问互联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!-- 包管理 -->
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <application
        android:name="com.cuhk.cse.exmail.model.app.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cuhk.cse.exmail.view.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cuhk.cse.exmail.view.HomeActivity" />
        <activity android:name="com.cuhk.cse.exmail.view.MailEditActivity" />
        <activity android:name="com.cuhk.cse.exmail.view.MailBoxActivity" />
        <activity android:name="com.cuhk.cse.exmail.view.MailAddContactActivity" />
        <activity android:name="com.cuhk.cse.exmail.view.MailContentActivity" />
        <activity android:name="com.cuhk.cse.exmail.view.MailContactActivity" />
        <activity android:name="com.cuhk.cse.exmail.view.SettingActivity" />
        <activity android:name="com.cuhk.cse.exmail.view.MailAddContacts" />
        <activity android:name="com.cuhk.cse.exmail.view.MailDraftsActivity" />
        <activity android:name="com.cuhk.cse.exmail.view.calendar.BaseCalendar" />

        <service android:name="com.cuhk.cse.exmail.controller.service.MailHelperService" />
    </application>

</manifest>